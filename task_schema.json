{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task",
  "type": "object",
  "properties": {
    "completed": {
      "description": "Indicates whether the task has been completed.",
      "type": "boolean"
    },
    "created": {
      "description": "The time when the task was created in Firestore.",
      "type": "string",
      "format": "date-time"
    },
    "details": {
      "description": "Details about the task.",
      "type": "string"
    },
    "title": {
      "description": "Title of the task.",
      "type": "string"
    },
    "user": {
      "description": "Reference to the user who owns the task.",
      "type": "string",
      "pattern": "^/users/[a-zA-Z0-9]{20}$"
    }
  },
  "required": ["completed", "created", "title", "user"],
  "additionalProperties": false
}
